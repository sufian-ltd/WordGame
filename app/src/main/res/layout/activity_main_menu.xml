<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/aa"
    tools:context=".MainMenuActivity">

    <TextView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:background="@drawable/l" />

    <Button
        android:id="@+id/buttonSingle"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="202dp"
        android:background="@drawable/btn8"
        android:fontFamily="serif"
        android:gravity="center"
        android:onClick="startClick"
        android:text="Single Player"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonMulti"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/btn8"
        android:fontFamily="serif"
        android:gravity="center"
        android:onClick="multiClick"
        android:text="Multiplayer"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ButtonHelp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="179dp"
        android:background="@drawable/btn9"
        android:fontFamily="serif"
        android:gravity="center"
        android:onClick="helpClick"
        android:text="How to Play"
        android:textColor="#fff"
        android:textSize="17sp"
        android:textStyle="bold" />


    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="130dp"
        android:background="@drawable/btn9"
        android:checked="true"
        android:fontFamily="serif"
        android:onClick="toggleButtonClick"
        android:text="ToggleButton"
        android:textColor="#fff"
        android:textOff="ENABLE SOUND"
        android:textOn="DISABLE SOUND"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ButtonCredite"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="39dp"
        android:background="@drawable/btn3"
        android:fontFamily="serif"
        android:gravity="center"
        android:onClick="creditClick"
        android:text="!About Developer!"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>