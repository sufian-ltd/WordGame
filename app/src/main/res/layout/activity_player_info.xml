<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:background="@drawable/aa"
    tools:context=".PlayerInfoActivity">

    <TextView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_margin="30dp"
        android:layout_gravity="center"
        android:background="@drawable/l" />

    <EditText
        android:id="@+id/editTextF"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/btn7"
        android:ems="10"
        android:fontFamily="serif"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:hint="First player name :"
        android:inputType="textPersonName"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/EditTextS"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/btn7"
        android:ems="10"
        android:fontFamily="serif"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:hint="Second player name :"
        android:inputType="textPersonName"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignEnd="@+id/editTextF"
        android:layout_gravity="center"
        android:background="@drawable/btn9"
        android:fontFamily="serif"
        android:onClick="nextClick"
        android:text="start playing"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:textSize="17sp"
        android:textStyle="bold" />
</LinearLayout>